{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Serve and Launch (Chrome)",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}",
      "resolveSourceMapLocations": [
          "${workspaceFolder}/**",
          "!**/node_modules/**"
      ],
      "preLaunchTask": "serve-angular",
      "postDebugTask": "terminate-all-tasks"
    },
    {
      "command": "ng serve",
      "name": "Run ng serve",
      "request": "launch",
      "type": "node-terminal"
    }
  ]
}